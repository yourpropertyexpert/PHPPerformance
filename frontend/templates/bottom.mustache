yAxis: {
    type: ($('#axis').val() == 'log') ? 'logarithmic' : 'linear',
    minorTickInterval: 'auto',
    title: {text: 'Time for $displayIterations iterations (s)'}
},
plotOptions: {
    column: {
        stacking: 'normal',
        dataLabels: {
            enabled: false
        }
